<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicaciones Moviles y Sistemas Telematicos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evaluationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:text="AMST LEC1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/integrantesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluationTextView"
            android:text="Jordan Miranda - Erick Pulley"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/integrantesTextView"
            android:layout_marginTop="16dp"
            android:hint="Ingrese el nombre del hÃ©roe" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Buscar" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>